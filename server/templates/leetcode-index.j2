{% extends "desktop.j2" %}

{% block title %}
{{app.title}} Leetcode Rust Solutions
{% endblock %}


{% block content %}
<div class="component">

    <div class="window" >
        <div class="title-bar">
            <div class="title-bar-text">Leetcode Easy Solutions</div>
            <div class="title-bar-controls">
                <button aria-label="Minimize"></button>
                <button aria-label="Maximize"></button>
                <button aria-label="Close"></button>
            </div>
        </div>
        <div class="window-body">
            <table>
                <thead>
                    <tr>
                        <th>id</th>
                        <th>Leetcode {{rows_easy.len()}} Easy Solutions</th>
                        <th>Level</th>
                    </tr>
                </thead>
                <tbody>
                {% for row in rows_easy %}
                <tr>
                    <td>
                        {{row.id}}
                    </td>
                    <td>
                        <a href="{{row.href()}}"> {{row.title}}</a>
                    </td>
                    <td>
                        {{row.level_str()}}
                    </td>
                </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <div class="window" >
